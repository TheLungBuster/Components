<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/event_element_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/icon_notification_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/ic_notification_new_event" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/direction_event_notification"
            style="@style/Body1Neutral800"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Появилось новое мероприятие “Гибкие методологии” не пропусти!" />

        <TextView
            android:id="@+id/description_event_notification"
            style="@style/TextAppearance.MyTheme.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Онлайн-лекция  ·  28 апр в 17:00" />

        <TextView
            android:id="@+id/notification_time"
            style="@style/TextAppearance.MyTheme.Subtitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:text="Час назад" />
    </LinearLayout>

</LinearLayout>