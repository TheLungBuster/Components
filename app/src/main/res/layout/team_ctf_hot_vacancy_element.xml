<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/hot_vacancy_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/hot_vacancy_city"
        style="@style/Body2Neutral400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новосибирск"/>

    <TextView
        android:id="@+id/hot_vacancy_name"
        style="@style/Header3Neutral800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Инженер-технолог / Аналитик банковских процессов (Кредиты, Гарантии)" />

    <TextView
        android:id="@+id/hot_vacancy_direction"
        style="@style/Body2Neutral400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Разработка ПО"/>

</LinearLayout>