<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/block_develop_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_develop_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_develop_error" />

    <TextView
        android:id="@+id/title_develop_error"
        style="@style/Header2Neutral800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:gravity="center_horizontal"
        android:text="Упс, произошла ошибка :("/>

    <TextView
        android:id="@+id/description_develop_error"
        style="@style/Body1Neutral600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Наши разработчики, отодвинув чашку кофе, уже ищут где проблема!"/>

    <Button
        android:id="@+id/try_again_button"
        style="@style/Widget.MyTheme.PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Попробовать еще раз"/>

    <Button
        android:id="@+id/back_to_edit_button"
        style="@style/Widget.MyTheme.SecondaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Перейти к форме редактирования"/>
</LinearLayout>