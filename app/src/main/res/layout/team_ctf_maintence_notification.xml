<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/maintenance_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/maintenance_city_notification"
        style="@style/TextAppearance.MyTheme.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новосибирск"/>

    <TextView
        android:id="@+id/maintenance_name_notification"
        style="@style/TextAppearance.MyTheme.Headline6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Инженер-технолог / Аналитик банковских процессов (Кредиты, Гарантии)"/>

    <TextView
        android:id="@+id/maintenance_status_notification"
        style="@style/Body2Red500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_status_red"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="Отказано"/>

    <TextView
        android:id="@+id/notification_time"
        style="@style/Body2Neutral600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="8dp"
        android:text="Час назад" />

</LinearLayout>