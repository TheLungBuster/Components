<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/start_carrier_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/month_carrier_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="?attr/shapeAppearanceMediumComponent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_example"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/month_carier"
                style="@style/Header2Neutral0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Апр" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/direction_carrier"
        style="@style/Header3Neutral800"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:text="MachineLearning"
        app:layout_constraintBottom_toTopOf="@+id/description_carrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/month_carrier_card"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description_carrier"
        style="@style/Body2Neutral400"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="FOCUS START  ·  Новосибирск  "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/direction_carrier"
        app:layout_constraintTop_toBottomOf="@+id/direction_carrier" />
</androidx.constraintlayout.widget.ConstraintLayout>