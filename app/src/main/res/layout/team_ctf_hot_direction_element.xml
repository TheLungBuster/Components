<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/hot_deriction_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/title_hot_direction"
        style="@style/Header2Neutral800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Управление проектами и развитие бизнеса"/>

    <TextView
        android:id="@+id/description_hot_direction"
        style="@style/TextAppearance.MyTheme.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Организуйте эффективное управление"/>
</LinearLayout>