<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/block_title_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/title_block"
        style="@style/Header2Neutral800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Мы с тобой всё настроили!"/>

    <TextView
        android:id="@+id/description_block"
        style="@style/Body1Neutral600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Теперь можно наше приложение будет показывать тебе только то, что тебе интересно! Так же ты можешь настроить это в вкладке профиль, если вдруг понадобится :)"/>

</LinearLayout>