<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/block_ok"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/we_ctf_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/ic_we_ctf" />

    <TextView
        android:id="@+id/title_ok"
        style="@style/Header2Neutral800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:gravity="center_horizontal"
        android:text="Ну вот..." />

    <TextView
        android:id="@+id/description_ok"
        style="@style/Body1Neutral600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Но если все-таки захочешь настроить подборки, то ты можешь настроить это в вкладке профиль :)" />

    <Button
        android:id="@+id/done_button_ok"
        style="@style/Widget.MyTheme.PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Круто!" />
</LinearLayout>